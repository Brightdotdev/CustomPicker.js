{
  "author": "Brightdotdev - Akinola Bright | mail.bright.dev@gmail.com ",
  "name": "@brightdotdev/color-picker",
  "description": "A Lightweight, framework-agnostic color picker library built with TypeScript",
  "private": false,
  "version": "1.0.3",
  "type": "module",
  "main": "./dist/color-picker.umd.js",
  "module": "./dist/color-picker.es.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/color-picker.css",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run types:check",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "types:check": "tsc --noEmit --skipLibCheck"
  },
  "files": [
    "dist",
    "lib",
    "types"
  ],
   "keywords": [
    "color-picker",
    "color",
    "picker",
    "hsl",
    "rgb",
    "cmyk",
    "typescript",
    "vanilla-js"
  ],

  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Brightdotdev/CustomPicker.js.git"
  },
  "bugs": {
    "url": "https://github.com/Brightdotdev/CustomPicker.js/issues"
    },
  "homepage": "https://github.com/Brightdotdev/CustomPicker.js#readme",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/color-picker.es.js",
      "require": "./dist/color-picker.umd.js"
    },
    "./lib/*": "./lib/*",
    "./types/*": "./types/*"
  }
}