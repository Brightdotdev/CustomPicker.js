{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./lib/*"],
      "@types/*": ["./types/*"]
    }
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "types/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}